<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">
    <ImageView
        android:src="@drawable/x"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/text_view_poke_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="poke quiz"
        android:textSize="60sp"
        android:gravity="center_horizontal"
        android:textColor="#FF9800"/>

    <Button
        android:layout_below="@id/text_view_poke_quiz"
        android:id="@+id/button_instructions"
        android:text="instructions"
        android:textSize="30sp"
        android:onClick="instruction"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_below="@id/button_instructions"
        android:id="@+id/button_lets_begin"
        android:text="let's begin"
        android:textSize="30sp"
        android:layout_margin="16dp"
        android:onClick="letsBegin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
